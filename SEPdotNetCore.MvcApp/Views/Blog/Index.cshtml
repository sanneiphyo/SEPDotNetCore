@model List<TblBlog>

<a href="/Blog/Create" class=" btn btn-outline-success">Create New Blog</a>

	<table class="table table-responsive">
		<thead>
			<tr>
			<th>No.</th>
			<th>Blog Title</th>
			<th>Blog Author</th>
			<th>Blog Content</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.BlogId</td>
				<td>@item.BlogTitle</td>
				<td>@item.BlogAuthor</td>
				<td>@item.BlogContent</td>
			</tr>
		}
		</tbody>

	</table>